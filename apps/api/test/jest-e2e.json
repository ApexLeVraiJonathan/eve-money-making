{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/arbitrage-packager": "<rootDir>/../libs/arbitrage-packager/src",
    "@app/arbitrage-packager/(.*)": "<rootDir>/../libs/arbitrage-packager/src/$1",
    "@app/lib": "<rootDir>/../libs/lib/src",
    "@app/lib/(.*)": "<rootDir>/../libs/lib/src/$1",
    "@shared/data-import": "<rootDir>/../libs/data-import/src",
    "@shared/data-import/(.*)": "<rootDir>/../libs/data-import/src/$1"
  }
}
